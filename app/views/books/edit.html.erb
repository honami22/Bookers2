<%= link_to "Users", users_path %>
<%= link_to "Books", books_path %>

<%= render 'users/user', user: @user %>

<%= render 'books/book', book: @book %>




<h1>Books#edit</h1>

<div class= "edi">

  <h2>Editing Book</h2>
<!--<p>Find me in app/views/books/edit.html.erb</p>-->
  <%= flash[:notice] %>
 <%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body%>
   <p>ユーザーネーム：<%= @book.user.name %></p>

  </br>
  <%= f.submit 'Update Book' %>


  <% end %>
</div>