<h1>Books#index</h1>
<!--<p>Find me in app/views/books/index.html.erb</p>-->
 <%= flash[:notice] %>
 <%= flash[:alert] %>

<div>

        <h2>New book</h2>

        <%= form_with model: @book, url: '/books', method: :post do |f| %>
            <p>Title</p><%= f.text_field :title %>
            <p>Opinion</p><%= f.text_area :body %>
            <br><%= f.submit 'Create Book' %>
        <% end %>
    </div>


    <div>
        <h1>Books</h1>
        <%= @books.each do |book| %>
            <%= link_to user_path(@book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %><br>
            <h3>Title</h3><br><%= link_to book.title, books_path(@book.id) %><br>
            <h3>Opinion</h3><br><%= book.body %><br>

        <% end %>

    </div>