


<h1>Books#new</h1>
<div>
        <h2>New book</h2>

        <%= form_with model: @book, url: '/books', method: :post do |f| %>
            <p>Title</p><%= f.text_field :title %>
            <p>Opinion</p><%= f.text_area :body %>

            <br><%= f.submit 'Create Book' %>
        <% end %>
</div>


<h1>Books#index</h1>
<% @books.each do |book| %>
<div>
  <p>title:<%= book.title %></p>
  <p>Body:<%= book.body%></p>

</div>

<% end %>
